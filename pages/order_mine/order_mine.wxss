page,
view,
image,
text,
swiper,
swiper-item,
navigator,
button {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
page {
  background-color: #FAF2F9;
}
page .item {
  width: 94%;
  margin: 20rpx auto;
  height: 220rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  border-radius: 20rpx;
}
page .item navigator {
  width: 100%;
  height: 100%;
}
page .item navigator .top {
  flex: 5;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 4rpx #FAF2F9 solid;
}
page .item navigator .top .top_img {
  flex: 1;
  margin-right: 40rpx;
}
page .item navigator .top .top_img image {
  width: 100%;
}
page .item navigator .top .top_title {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
page .item navigator .top .top_title .title_address {
  flex: 1;
  margin: 10rpx 0;
}
page .item navigator .top .top_title .title_project {
  flex: 1;
  font-size: 35rpx;
  color: #999;
}
page .item navigator .top .top_icon {
  flex: 1;
}
page .item navigator .top .top_icon image {
  width: 100%;
}
page .item navigator .bottom {
  margin-top: 10rpx;
  flex: 2;
}
page .item navigator .bottom .btm_time {
  height: 60rpx;
  width: 420rpx;
  text-align: center;
  font-size: 36rpx;
  padding: 10rpx;
  border-radius: 25rpx;
  background-color: #EEEEEE;
}
page .noData {
  width: 100vw;
  height: 100vw;
  margin: 0 auto;
}
page .noData image {
  width: 100%;
  height: 100%;
}

page {
  background-color: #FAF2F9;
  padding-bottom: 40rpx;
}
page .content {
  display: flex;
  flex-direction: column;
}
page .content .col {
  margin: 20rpx 40rpx;
  display: flex;
  height: 60rpx;
}
page .content .col .title {
  flex: 2;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  text-align: right;
  padding-right: 30rpx;
}
page .content .col .inp {
  flex: 5;
}
page .content .col .inp input {
  height: 60rpx;
  background-color: white;
  border-radius: 10rpx;
  padding-left: 30rpx;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
  border-radius: 20rpx;
}
page .content .col .inp textarea {
  width: 87%;
  background-color: white;
  border-radius: 10rpx;
  padding: 10rpx 30rpx;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
  border-radius: 20rpx;
}
page .content .col .radio {
  flex: 5;
  display: flex;
  align-items: center;
  position: relative;
}
page .content .col .radio label {
  flex: 1;
  height: 100%;
  font-size: 25rpx;
  padding-left: 10rpx;
}
page .content .col .radio label radio {
  transform: scale(0.5);
}
page .content .col .radio label text {
  margin-left: -15rpx;
}
page .content .col_buwei .title {
  display: flex;
}
page .content .col_buwei .title .title_name {
  text-align: right;
  flex: 2;
}
page .content .col_buwei .title .title_item {
  flex: 5;
  display: flex;
  flex-direction: column;
}
page .content .col_buwei .title .title_item radio-group {
  flex: 1;
  display: flex;
}
page .content .col_buwei .title .title_item radio-group label {
  flex: 1;
  font-size: 25rpx;
}
page .content .col_buwei .title .title_item radio-group label radio {
  transform: scale(0.5, 0.5);
}
page .content .col_buwei .title .title_item .inp {
  flex: 1;
}
page .content .col_buwei .title .title_item .inp input {
  background-color: white;
  border-radius: 10rpx;
  padding-left: 30rpx;
}
page .content .btn1 {
  margin-top: 50rpx;
}
page .content .btn1 button {
  color: white;
  border-radius: 25rpx;
  background-color: #6DBBB4;
}
page .content .btn2 {
  margin-top: 50rpx;
}
page .content .btn2 button {
  color: white;
  border-radius: 25rpx;
  background-color: #FF0000;
}

page {
  padding-bottom: 120rpx;
  background-color: #6DBBBC;
}
page .van-button--block {
  width: 100%;
}
page .content {
  padding: 20rpx;
  margin: 30rpx auto;
  width: 90%;
  border-radius: 20rpx;
  background-color: white;
}
page .content .img {
  width: 100%;
  display: flex;
  justify-content: center;
}
page .content .img image {
  width: 60%;
  padding: 0;
}
page .content .start {
  position: relative;
  display: flex;
  padding: 8rpx;
  margin-top: 20rpx;
  margin-left: 50rpx;
  line-height: 60rpx;
}
page .content .start .start_time {
  font-size: 35rpx;
  font-family: '幼圆';
}
page .content .start .startInput {
  width: 350rpx;
  height: 60rpx;
  background-color: white;
  padding-left: 40rpx;
  line-height: 40rpx;
  margin-left: 7rpx;
  border-radius: 20rpx;
  font-size: 35rpx;
  line-height: 60rpx;
  border: 4rpx solid black;
}
page .content .start image {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 14rpx;
  right: 80rpx;
}
page .content .select {
  width: 40vw;
  height: 90rpx;
  border-radius: 45rpx;
  margin: 40rpx auto;
  background-color: #6DBBBC;
  line-height: 90rpx;
  text-align: center;
  color: white;
  font-size: 40rpx;
  font-family: '幼圆';
}

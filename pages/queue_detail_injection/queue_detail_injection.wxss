page {
  background-color: #6DBBB4;
  padding: 30rpx;
}
page .content {
  position: relative;
}
page .content .left_div {
  width: 60rpx;
  height: 60rpx;
  background-color: #6dbbbc;
  position: absolute;
  top: 320rpx;
  left: -30rpx;
  z-index: 3;
  border-radius: 50%;
}
page .content .right_div {
  width: 60rpx;
  height: 60rpx;
  background-color: #6dbbbc;
  position: absolute;
  top: 320rpx;
  right: -30rpx;
  z-index: 3;
  border-radius: 50%;
}
page .content .title {
  display: flex;
  height: 60rpx;
}
page .content .title .title_img {
  flex: 1;
}
page .content .title .title_img image {
  width: 100%;
  height: 100%;
}
page .content .title .title_name {
  padding-left: 30rpx;
  flex: 13;
  color: white;
}
page .content .con_top {
  background-color: white;
  border-bottom: #6dbbbc 5rpx solid;
  font-size: 35rpx;
  display: flex;
  height: 540rpx;
  flex-direction: column;
  padding: 20rpx 0;
  border-radius: 20rpx;
  position: relative;
}
page .content .con_top .top_project {
  flex: 1;
  font-size: 50rpx;
  font-weight: 600;
  text-align: center;
}
page .content .con_top .top_date {
  flex: 1;
  color: #F26D07;
  height: 70rpx;
  display: flex;
}
page .content .con_top .top_date .item_title {
  flex: 1;
  line-height: 70rpx;
  text-align: right;
  padding-right: 30rpx;
}
page .content .con_top .top_date text {
  flex: 1;
  font-size: 44rpx;
  line-height: 70rpx;
}
page .content .con_bottom {
  height: 250rpx;
  background-color: white;
  padding: 10rpx 50rpx;
  font-size: 35rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
page .content .con_bottom .btm {
  height: 60rpx;
  margin: 20rpx 0;
}
page .content .con_bottom .btm_btn {
  flex: 2;
  display: flex;
  align-items: center;
}
page .content .con_bottom .btm_btn button {
  height: 70%;
  width: 290rpx;
  background-color: #eee;
  font-size: 35rpx;
  line-height: 100%;
  border-radius: 35rpx;
}

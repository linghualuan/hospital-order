page {
  background-color: #6DBBBC;
  padding: 30rpx;
}
page .content {
  position: relative;
}
page .content .title {
  display: flex;
  height: 60rpx;
}
page .content .title .title_img {
  flex: 1;
}
page .content .title .title_img image {
  width: 100%;
  height: 100%;
}
page .content .title .title_name {
  padding-left: 30rpx;
  flex: 13;
  color: white;
}
page .content .con_top {
  background-color: white;
  border-bottom: #6dbbbc 5rpx solid;
  text-align: center;
  font-size: 35rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding-top: 20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  position: relative;
}
page .content .con_top .top_project {
  flex: 1;
  font-size: 50rpx;
  margin: 20rpx 0;
}
page .content .con_top .top_date {
  flex: 1;
  margin: 20rpx 0;
}
page .content .con_top .top_date text {
  color: #F26D07;
  font-size: 40rpx;
}
page .content .con_top .top_time {
  flex: 1;
  display: flex;
  padding: 0 20rpx;
  align-items: center;
  height: 50rpx;
  line-height: 50rpx;
  margin: 10rpx 0;
}
page .content .con_top .top_time .title {
  flex: 1.5;
}
page .content .con_top .top_time .time {
  color: #F26D07;
  flex: 2;
}
page .content .con_top .top_time .time text {
  font-size: 40rpx;
}
page .content .con_top .top_time .number {
  flex: 1;
  color: #F26D07;
  font-size: 40rpx;
  text-align: right;
  padding: 0 40rpx;
}
page .content .con_top .btn {
  background-color: #6dbccc;
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin: 40rpx auto;
  color: white;
  border-radius: 35rpx;
}

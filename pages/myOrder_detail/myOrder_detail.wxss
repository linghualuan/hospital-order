page {
  background-color: #6DBBB4;
  padding: 20rpx;
}
page .content {
  position: relative;
  padding: 20rpx;
}
page .content .title {
  display: flex;
  height: 60rpx;
}
page .content .title .title_img {
  flex: 1;
}
page .content .title .title_img image {
  width: 100%;
  height: 100%;
}
page .content .title .title_name {
  padding-left: 30rpx;
  flex: 13;
  color: white;
}
page .content .con_top {
  background-color: white;
  border-bottom: #6dbbbc 5rpx solid;
  font-size: 35rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding-top: 20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding-bottom: 90rpx;
}
page .content .con_top .top_project {
  flex: 1;
  text-align: center;
  font-size: 60rpx;
  font-weight: 600;
}
page .content .con_top .top_item {
  flex: 1;
  position: relative;
  display: flex;
  height: 90rpx;
}
page .content .con_top .top_item .item_title {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: right;
  padding-right: 80rpx;
}
page .content .con_top .top_item .item_content {
  flex: 2;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 40rpx;
  color: #F26D07;
}
page .content .con_top .top_item .item_content textarea {
  width: 80%;
  font-size: 30rpx;
}
page .content .con_top .btn {
  width: 300rpx;
  height: 70rpx;
  background-color: #6DBBB4;
  border-radius: 35rpx;
  color: white;
  text-align: center;
  line-height: 70rpx;
  margin: 60rpx auto;
  margin-bottom: 0;
}
